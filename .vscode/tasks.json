{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				// "-L/opt/homebrew/Cellar/ncurses/6.4/lib",
				"-lncurses",
				// "-lboost_filesystem",
				// "-I./src/**",
				"./src/*.cpp",
				"./src/**/*.cpp",
				"./src/**/**/*.cpp",
				"-o",
				"main"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	],
	"version": "2.0.0"
}
